{
  "plugins": [
    "unused-imports"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "root": true,
  "extends": [
    "next/core-web-vitals",
    "next/typescript",
    "prettier"
  ],
  "rules": {
    "unused-imports/no-unused-imports": "warn",
    "unused-imports/no-unused-vars": "warn",
    "@typescript-eslint/no-unused-vars": "off"
  },
  "settings": {
    "next": {
      "rootDir": [
        "./src/"
      ]
    }
  },
  "ignorePatterns": [
    "node_modules/",
    ".next/",
    "assets/",
    "public/"
  ]
}