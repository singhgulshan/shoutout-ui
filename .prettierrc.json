{
  "trailingComma": "es5",
  "tabWidth": 2,
  "semi": false,
  "singleQuote": true,
  "useTabs": false,
  "jsxSingleQuote": true,
  "printWidth": 80,
  "plugins": [
    "@ianvs/prettier-plugin-sort-imports"
  ],
  "importOrder": [
    "^react$",
    "^next/(.*)$",
    "<THIRD_PARTY_MODULES>",
    "^@app(/.*)$",
    "^@containers/(.*)$",
    "^@components/(.*)$",
    "^@utils/(.*)$",
    "^@styles/(.*)$",
    "^(?!.*[.](css|scss)$)[./].*$",
    "[.](css|scss)$"
  ]
}